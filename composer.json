{
    "name": "ichihara-yamato/blade",
    "description": "A standalone version of Laravel's Blade templating engine for use outside of Laravel.",
    "keywords": ["laravel", "blade", "template", "templating"],
    "license": "MIT",
    "authors": [
        {
            "name": "Original: Jens Segers",
            "homepage": "https://jenssegers.com"
        },
        {
            "name": "Yamato Ichihara",
            "homepage": "https://github.com/ichihara-yamato"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/view": "^11.0",
        "illuminate/filesystem": "^11.0",
        "illuminate/events": "^11.0",
        "illuminate/container": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "IchiharaYamato\\Blade\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}